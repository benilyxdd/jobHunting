root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf

[{package.json,.travis.yml,webpack.config.js,babel.config.js}]
indent_style = space
indent_size = 2

[lib/**.js]
indent_style = space
indent_size = 2
